@model FlyBuy.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="account-page">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="container">
            <div class="row">
                <div class="col-2">

                    <div class="form-container form-container-2 form-container-3">

                        <div class="form-btn">
                            <span>Edit Product @Model.Name</span>
                        </div>

                        <div class="form-control form-control-2">
                            @Html.LabelFor(model => model.Name)
                            @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = " Edit Product Name" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                            @Html.LabelFor(model => model.Price)
                            @Html.TextBoxFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", placeholder = " Edit Product Price" } })
                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })

                            @Html.LabelFor(model => model.Description)
                            @Html.TextBoxFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = " Edit Product Description" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                            <input type="file" name="ImageFile" class="form-edit" required />

                            @Html.LabelFor(model => model.Rating)
                            @Html.TextBoxFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control", placeholder = " Edit Product Rating" } })
                            @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })


                            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "drop-down-list", placeholder = " Edit Product Category" })
                            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })

                            <input type="submit" value="Edit" class="btn btn-default" />
                            @Html.ActionLink("Back to List", "Index", "Products", new { @class = "btn btn-fix" })
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


}